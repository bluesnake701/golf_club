<div class="container" style="padding: 20px">
  <div class="row">
    <div class="mx-auto">
      <h1>料理ジャンル一覧・追加</h1>
    </div>
  </div>

  <%= render 'form', item_genre: @menu_genre, url: admin_menu_genres_path, submit: '新規登録' %>

  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <table cellpadding="5">
        <% @menu_genres.each do |menu_genre| %>
          <tr>
            <td><%= menu_genre.name %></td>
            <td><%= button_to "ジャンル編集", edit_admin_menu_genre_path(menu_genre.id), method: :get %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <%= paginate @menu_genres %>
    </div>
  </div>
</div>
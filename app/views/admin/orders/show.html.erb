<div class="container" style="padding: 20px">
  <div class="row">
    <div class="mx-auto">
      <h1>注文履歴詳細</h1>
    </div>
  </div>

  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <div class="col-md-20">
        <h4>購入者</h4>
        <p><%= @order.name %></p>
      </div>

      <div class="col-md-20">
        <h4>購入日</h4>
        <p><%= @order.created_at.strftime('%Y/%m/%d') %></p>
      </div>
    </div>
  </div>

  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <h4>配送先</h4>
      <p>
        〒<%= @order.postal_code %>
　       <%= @order.destination %>
　       <%= @order.name %>
      </p>
    </div>
  </div>

  <div class="row" style="margin-top: 20px">
    <div class="mx-auto">
      <h4>支払方法</h4>
    </div>
  </div>

  <div class="row" style="margin: 10px">
    <div class="mx-auto">
      <p><%= @order.payment_method_i18n %></p>
    </div>
  </div>

  <div class="row" style="margin: 10px">
    <div class="mx-auto">
      <h4>注文ステータス</h4>
      <p>
        <%= form_with model: @order, url: admin_order_path do |f| %>
          <%= f.select :status, Order.statuses_i18n.keys.map {|k| [Order.statuses_i18n[k], k]} %>
          <%= f.submit '更新' %>
        <% end %>
      </p>
    </div>
  </div>

  <div class="row" style="margin: 10px">
    <div class="mx-auto">
      <table cellpadding="5" border=”1″>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td>¥<%= order_detail.price %></td>
              <td><%= order_detail.amount %></td>
              <td>¥<%= order_detail.price*order_detail.amount %></td>
              <td>
                <%= form_with model: order_detail, url: admin_order_order_detail_path(order_detail.id) do |f| %>
                  <%= f.select :shipping_status, OrderDetail.shipping_statuses_i18n.keys.map {|k| [OrderDetail.shipping_statuses_i18n[k], k]} %>
                  <%= f.submit '更新' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row" style="margin: 10px">
    <div class="mx-auto">
      <table cellpadding="5" border=”1″>
        <thead>
          <th>商品合計</th>
          <th>送料</th>
          <th>請求金額合計</th>
        </thead>
        <tbody>
          <td>¥<%= @order.grand_total - @order.shipping_cost %></td>
          <td>¥800</td>
          <td>¥<%= @order.grand_total %></td>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container" style="padding: 20px">
  <div class="row">
    <div class="mx-auto">
      <h1>商品詳細</h1>
    </div>
  </div>

  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <table cellpadding="5" border=”1″>
        <tr>
          <td>s</td>
          <td>
            <% if @item.image.attached? %>
              <%= image_tag @item.image, size: "200x200" %>
            <% else %>
              <%= image_tag asset_path('no_image.jpg'), size: "200x200" %>
  　　      　<% end %>
          </td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.item_genre.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>税込価格(税抜価格)</td>
          <td><%= @item.add_tax_price.to_s(:dalimited) %> (<%= @item.price %>) 円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active == true %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <%= button_to '商品編集', edit_admin_item_path(@item.id), method: :get %>
    </div>
  </div>
</div>
<h1>レストランメニュー一覧</h1>
<table border=”1″>
  <tr>
    <td><%= link_to "ジャンル一覧", admin_menu_genres_path %></td>
    <td><%= link_to "新メニュー登録", new_admin_menu_path %></td>
  </tr>
</table>
<table>
  <thead>
    <tr>
      <th>料理画像</th>
      <th>料理名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>販売ステータス</th>
    </tr>
  </thead>
  <tbody>
  <% @menus.each do |menu| %>
    <tr>
      <td>
        <%= link_to admin_menu_path(menu.id) do %>
          <% if menu.image.attached? %>
            <%= image_tag menu.image, size: "100x100" %>
          <% else %>
            <%= image_tag asset_path('no_image'), size: "100x100" %>
  　　    　<% end %>
  　     <% end %>
      </td>
      <td><%= menu.name %></td>
      <td>¥<%= menu.price %></td>
      <td><%= menu.menu_genre.name %></td>
      <td>
        <% if menu.is_active == true %>
        販売中
        <% else %>
        販売停止中
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
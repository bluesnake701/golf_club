<h1>メニュー編集</h1>

<% if @menu.errors.any? %>
<div class="alart">
  <%= @menu.errors.count %>件のエラーが発生しました
  <ul>
    <% @menu.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<%= form_with model: @menu, url: admin_menu_path(@menu.id) do |f| %>
<table>
  <tr>
    <td><%= f.file_field :image, accept: "image/*" %></td>
  </tr>
  <tr>
　  <td><%= f.label :name, "料理名" %></td>
　  <td><%= f.text_field :name %></td>
  </tr>
  <tr>
　  <td><%= f.label :price, "値段" %></td>
　  <td>¥<%= f.text_field :price %></td>
  </tr>
  <tr>
　  <td><%= f.label :item_genre_id, "ジャンル" %></td>
　  <td><%= f.select :menu_genre_id, options_from_collection_for_select(MenuGenre.all, :id, :name) %></td>
  </tr>
  <tr>
　  <td><%= f.label :introduction, "料理説明文" %></td>
　  <td><%= f.text_area :introduction %></td>
  </tr>
  <tr>
    <td><%= f.label :is_active, "販売ステータス" %></td>
　  <td>
　    <%= f.radio_button :is_active, "true" %>
　  　<%= f.label :is_active, "販売中", {value: true} %>
　  　<%= f.radio_button :is_active, "false" %>
　  　<%= f.label :is_active, "販売停止中", {value: false} %>
　  </td>
  </tr>
  <tr>
　  <td><%= f.submit '編集する' %></td>
　</tr>
</table>
<% end %>


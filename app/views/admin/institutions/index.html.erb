<div class="container" style="padding: 20px">
  <div class="row">
    <div class="mx-auto">
      <h1>施設一覧</h1>
    </div>
  </div>

  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <%= button_to "新施設登録", new_admin_institution_path, method: :get %>
    </div>
  </div>

  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <table cellpadding="5" border=”1″>
        <% @institutions.each do |institution| %>
        <tr>
          <td>
            <%= link_to admin_institution_path(institution.id) do %>
              <% if institution.image.attached? %>
                <%= image_tag institution.image, size: "150x150" %>
              <% else %><%= image_tag asset_path('no_image.jpg'), size: "150x150" %>
              <% end %>
  　         <% end %>
  　       </td>
          <td><%= institution.name %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
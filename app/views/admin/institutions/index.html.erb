<h1>施設一覧</h1>
<%= link_to "新施設登録", new_admin_institution_path %>
<table>
  <% @institutions.each do |institution| %>
  <tr>
    <td>
    <%= link_to admin_institution_path(institution.id) do %>
  　　　<% if institution.image.attached? %>
    　　<%= image_tag institution.image, size: "150x150" %>
  　　　<% else %>
    　　<%= image_tag 'no_image', size: "150x150" %>
  　　　<% end %>
  　<% end %>
  　</td>
    <td><%= institution.name %></td>
  </tr>
  <% end %>
</table>
<% if @institution.errors.any? %>
  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <div class="alart">
        <%= @institution.errors.count %>件のエラーが発生しました
        <ul>
          <% @institution.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>

<div class="row" style="margin: 20px">
  <div class="mx-auto">
    <%= form_with model: @institution, url: url do |f| %>
      <table cellpadding="5" border=”1″>
        <tr>
          <td></td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
　        <td><%= f.label :name, "施設名" %></td>
　        <td><%= f.text_field :name %></td>
        </tr>
        <tr>
　        <td><%= f.label :introduction, "施設説明文" %></td>
　        <td><%= f.text_area :introduction %></td>
        </tr>
      </table>
  </div>
</div>

<div class="row" style="margin: 20px">
  <div class="mx-auto">
　    <%= f.submit submit %>
    <% end %>
  </div>
</div>
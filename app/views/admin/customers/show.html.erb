<h1>
  <%= @customer.last_name %>
  <%= @customer.first_name %>
  さんの会員詳細
</h1>

<table>
  <tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <td>氏名</td>
    <td>
      <%= @customer.last_name %>
      <%= @customer.first_name %>
    </td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td>
        <%= @customer.last_name_kana %>
    　　<%= @customer.first_name_kana %>
    </td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
  </tr>
  <tr>
    <td>会員ステータス</td>
    <td>
    　　<% if @customer.is_active == true %>
　　　　有効
　　　　<% else %>
　　　　退会
　　　　<% end %>
    </td>
  </tr>
</table>

<%= link_to "編集する", edit_admin_customer_path(@customer.id) %>

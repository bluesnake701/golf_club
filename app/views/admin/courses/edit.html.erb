<h1>コース編集</h1>

<% if @course.errors.any? %>
  <%= @course.errors.count %>件のエラーが発生しました
  <ul>
    <% @course.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @course, url: admin_course_path(@course.id) do |f| %>
<table>
  <tr>
    <td><%= f.file_field :image, accept: "image/*" %></td>
  </tr>
  <tr>
　  <td><%= f.label :hole, "ホール" %></td>
　  <td><%= f.text_field :hole %></td>
  </tr>
  <tr>
　  <td><%= f.label :par, "パー" %></td>
　  <td>par<%= f.text_field :par %></td>
  </tr>
  <tr>
　  <td><%= f.label :yard, "ヤード" %></td>
　  <td><%= f.text_field :yard %>y</td>
  </tr>
  <tr>
　  <td><%= f.label :introduction, "コース説明文" %></td>
　  <td><%= f.text_area :introduction %></td>
  </tr>
  <tr>
　  <td><%= f.submit '編集する' %></td>
　</tr>
</table>
<% end %>
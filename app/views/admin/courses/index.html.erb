<div class="container" style="padding: 20px">
  <div class="row">
    <div class="mx-auto">
      <h1>コース一覧</h1>
      </div>
  </div>
  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <% if @count <18 %>
        <%= link_to "新コース登録", new_admin_course_path %>
        <%= @count %>件<br>
      <% end %>
    </div>
  </div>
  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <div class="course-table">
        <table border=”1″ cellpadding="10">
          <% @courses.each do |course| %>
            <tr>
              <td class="course-table-td">
                <%= link_to admin_course_path(course.id) do %>
                  <%= course.hole %>
                <% end %>
              </td>
              <td class="course-table-td">par<%= course.par %></td>
              <td class="course-table-td"><%= course.yard %>y</td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>

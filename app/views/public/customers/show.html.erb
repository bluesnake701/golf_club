<div class="container" style="padding: 20px">
  <div class="row">
      <div class="mx-auto">
        <h1>マイページ</h1>
      </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <div style="margin: 5px">
        <div class="card shadow-sm">
          <div class="card-body">
            <div class="card-title">
              <h3>登録情報</h3>
            </div>
            <div class="card-title">
              氏名:
              <%= @customer.last_name %>
              <%= @customer.first_name %>
            </div>
            <div class="card-title">
              フリガナ:
              <%= @customer.last_name_kana %>
              <%= @customer.first_name_kana %>
            </div>
            <div class="card-title">
              メールアドレス:
              <%= @customer.email %>
            </div>
            <div class="card-title">
              <%= button_to "編集する",  {controller: 'customers', action: 'edit'}, {method: :get} %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <div class="card shadow-sm" style="width: 20rem;">
        <div class="card-body">
          <div class="card-title">
            <h3>配送先</h3>
              <%= link_to "一覧を見る", addresses_path %>
            </div>
            <div class="card-title">
              <h3>注文履歴</h3>
              <%= link_to "一覧を見る", orders_path %>
            </div>
            <div class="card-title">
              <h3>予約</h3>
              <%= link_to "プランを見る", plans_path %>
            </div>
            <div class="card-title">
              <h3>予約履歴</h3>
              <%= link_to "一覧を見る", reserves_path %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
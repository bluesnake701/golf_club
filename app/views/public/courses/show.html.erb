<div class="container" style="padding: 20px">
  <div class="row">
    <div class="mx-auto">
      <h1>コース紹介</h1>
    </div>
  </div>
  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <div style="margin: 50px">
        <% if @course.image.attached? %>
          <%= image_tag @course.image %>
        <% else %>
          <%= image_tag asset_path('no_image.jpg'), size: "200x200" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <table>
      <div class="col">
        ホール<%= @course.hole %>
      </div>
      <div class="col">
        par<%= @course.par %>
      </div>
      <div class="col">
        <%= @course.yard %>y
      </div>
      <div class="col">
        <%= @course.introduction %>
      </div>
      </table>
    </div>
  </div>
</div>

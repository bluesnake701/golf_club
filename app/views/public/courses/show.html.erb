<div class="container" style="padding: 20px">
  <div class="row">
    <div class="mx-auto">
      <h1>コース紹介</h1>
      <table>
        <tr>
        <% if @course.image.attached? %>
          <td><%= image_tag @course.image, size: "200x200" %></td>
        <% else %>
          </td><%= image_tag asset_path('no_image.jpg'), size: "200x200" %></td>
        <% end %>
        </tr>
        <tr>
          <td>ホール<%= @course.hole %></td>
        </tr>
        <tr>
          <td>par<%= @course.par %></td>
        </tr>
        <tr>
          <td><%= @course.yard %>y</td>
        </tr>
        <tr>
          <td><%= @course.introduction %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="container" style="padding: 20px">
  <div class="row">
    <div class="mx-auto">
      <h2>新規会員登録</h2>
    </div>
  </div>

  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="alart"><%= render "public/shared/error_messages", resource: resource %></div>
    </div>
  </div>

  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <table cellpadding="5">
		    <tr>
		      <td>名前</td>
		      <td><%= f.label :last_name, "(姓)" %> <%= f.text_field :last_name, :placeholder =>"#{@customer.last_name}" %></td>
		      <td><%= f.label :first_name, "(名)" %> <%= f.text_field :first_name, :placeholder =>"#{@customer.first_name}" %></td>
		    </tr>
		    <tr>
		      <td>フリガナ</td>
		      <td><%= f.label :last_name_kana, "(姓)" %> <%= f.text_field :last_name_kana, :placeholder =>"#{@customer.last_name_kana}" %></td>
		      <td><%= f.label :first_name_kana, "(名)" %> <%= f.text_field :first_name_kana, :placeholder =>"#{@customer.first_name_kana}" %></td>
		    </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <% if @minimum_password_length %>
          <td>パスワード(<%= @minimum_password_length %>文字以上)</td>
          <% end %>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td>パスワード(確認用)</td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <%= f.submit "新規登録" %>
      <% end %>
    </div>
  </div>

  <div class="row" style="margin: 50px">
    <div class="mx-auto">
      <h4>既に登録済みの方</h4>
      <p>
        <%= render "public/shared/links" %> からログインしてください。
      </p>
    </div>
  </div>
</div>
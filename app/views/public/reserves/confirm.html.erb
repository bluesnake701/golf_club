<div class="container" style="padding: 20px">
  <div class="row">
    <div class="mx-auto">
      <h1>予約情報確認</h1>
    </div>
  </div>

  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <%= form_with model: @reserf, url: complete_path do |f| %>
        <table cellpadding="5">

          <%= render 'table', reserf: @reserf %>

          <tr>
            <td>開始日時</td>
            <td><%= @reserf.start.strftime("%Y/%m/%d %H:%M") %></td>
          </tr>

          <%= f.hidden_field :plan_id, :value => @plan.id %>
          <%= f.hidden_field :customer_id, :value => current_customer.id %>
          <%= f.hidden_field :start %>
        </table>
    </div>
  </div>

  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <%= f.submit '予約完了画面へ' %>
      <% end %>
    </div>
  </div>
</div>
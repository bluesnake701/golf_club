<div class="container" style="padding: 20px">
  <div class="row">
    <div class="mx-auto">
      <h1>注文情報入力</h1>
    </div>
  </div>

  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <% if @order.errors.any? %>
      <div class="alart">
        <%= @order.errors.count %>件のエラーが発生しました
        <ul>
          <% @order.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
    </div>
  </div>

  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <h4>支払方法</h4>
    </div>
  </div>
  <div class="row" style="margin: 5px">
    <div class="mx-auto">
      <%= form_with model: @order, url:orders_confirm_path do |f| %>
        <div class="float-left" style="margin: 10px">
          <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
        </div>
        <div class="float-right" style="margin: 10px">
          <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
        </div>
    </div>
  </div>

  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <h4>お届け先</h4>
    </div>
  </div>

  <div class="row" style="margin: 5px">
    <div class="mx-auto">
      <table>
        <tr>
          <td>
            <%= f.radio_button :address_option, "0", {:checked => true} %>
            <%= f.label :address_id, "登録済み住所から選択" %>
            <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.radio_button :address_option, "1" %>
            <%= f.label :address_id, "新しいお届け先" %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label :name, "郵便番号" %>
            <%= f.text_field :postal_code %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label :name, "住所" %>
            <%= f.text_field :destination %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label :name, "宛名" %>
            <%= f.text_field :name %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.hidden_field :customer_id, :value => current_customer.id %>
            <%= f.submit '確認画面へ進む' %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>

<div class="container" style="padding: 20px">
  <div class="row">
    <div class="mx-auto">
    <h1>レストランメニュー</h1>
    <table>
      <% @menus.each do |menu| %>
      <thead>
        <tr>
          <th>
            <%= link_to menu_path(menu.id) do %>
              <% if menu.image.attached? %>
                <%= image_tag menu.image, size: "100x100" %>
              <% else %>
                <%= image_tag asset_path('no_image.jpg'), size: "100x100" %>
              <% end %>
            <% end %>
          </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= menu.name %></td>
        </tr>
        <tr>
          <td>¥<%= menu.add_tax_price.to_s(:dalimited) %> (税込)</td>
        </tr>
      </tbody>
      <% end %>
    </table>
    </div>
  </div>
</div>
<div class="container" style="padding: 20px">
  <div class="row">
    <div class="mx-auto">
      <h1>メニュー詳細</h1>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <div style="margin: 50px">
        <% if @menu.image.attached? %>
          <%= image_tag @menu.image, size: "400x400" %>
        <% else %>
          <%= image_tag asset_path('no_image.jpg'), size: "400x400" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <table cellpadding="5">
        <tr>
          <td>
            <%= @menu.name %>
            ¥<%= @menu.add_tax_price.to_s(:dalimited) %> (税込)
          </td>
        </tr>
        <tr>
          <td><%= @menu.menu_genre.name %></td>
        </tr>
        <tr>
          <td>
            <% if @menu.is_active == true %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>

<% if @address.errors.any? %>
  <div class="row" style="margin: 20px">
    <div class="mx-auto">
      <div class="alart">
        <%= @address.errors.count %>件のエラーが発生しました
          <ul>
            <% @address.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    </div>
  </div>
<% end %>


<div class="row" style="margin: 20px">
  <div class="mx-auto">
    <%= form_with model: @address, url: url do |f| %>
      <table>
        <tr>
          <td>
            <%= f.label :name, "郵便番号" %>
          </td>
          <td>
            <%= f.text_field :postal_code %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label :name, "住所" %>
          </td>
          <td>
            <%= f.text_field :destination %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label :name, "宛名" %>
          </td>
          <td>
            <%= f.text_field :name %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.hidden_field :customer_id, :value => current_customer.id %>
          </td>
        </tr>
      </table>
  </div>
</div>

<div class="row" style="margin: 20px">
  <div class="mx-auto">
    <%= f.submit submit %>
    <% end %>
  </div>
</div>
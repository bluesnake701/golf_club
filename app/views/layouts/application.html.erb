<!DOCTYPE html>
<html>
  <head>
    <title>GolfClub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%if customer_signed_in? %>
    <%= link_to '森林山GC', root_path %>
    <li>
  　　<%= link_to 'マイページ', mypage_path(current_customer) %>
  　</li>
  　<li>
  　　<%= link_to 'コース紹介', courses_path %>
  　</li>
  　<li>
  　　<%= link_to 'レストランメニュー', menus_path %>
  　</li>
  　<li>
  　　<%= link_to 'ショップ', items_path %>
  　</li>
  　<li>
  　　<%= link_to 'カート内商品', cart_items_path %>
  　</li>
  　<li>
  　　<%= link_to '施設', institutions_path %>
  　</li>
  　<li>
  　　<%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
  　</li>

  　<% elsif admin_signed_in? %>
  　<%= link_to '森林山GC', admin_top_path %>
  　<li>
  　　<%= link_to 'コース一覧', admin_courses_path %>
  　</li>
  　<li>
  　　<%= link_to '会員一覧', admin_customers_path %>
  　</li>
  　<li>
  　　<%= link_to 'レストランメニュー一覧', admin_menus_path %>
  　</li>
  　<li>
  　　<%= link_to 'ショップ商品一覧', admin_items_path %>
  　</li>
  　<li>
  　　<%= link_to '施設一覧', admin_institutions_path %>
  　</li>
  　<li>
  　　<%= link_to 'プラン一覧', admin_plans_path %>
  　</li>
  　<li>
  　  <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %>
  　</li>

  　<% else %>
  　<%= link_to '森林山GC', root_path %>
  　<li>
　　<%= link_to "About", about_path %>
　　</li>
　　<li>
  　　<%= link_to 'コース紹介', courses_path %>
  　</li>
  　<li>
  　　<%= link_to 'レストランメニュー', menus_path %>
  　</li>
  　<li>
  　　<%= link_to 'ショップ', items_path %>
  　</li>
  　<li>
  　　<%= link_to '施設', institutions_path %>
  　</li>
　　<li>
　　  <%= link_to "新規登録", new_customer_registration_path %>
 　　</li>
　　<li>
  　　<%= link_to "ログイン", new_customer_session_path, data: { 'turbolinks': false } %>
  　</li>

  　<% end %>
    <%= yield %>
    <li>
    <%= link_to "管理者ログイン", new_admin_session_path, data: { 'turbolinks': false } %>
    </li>
  </body>
</html>
